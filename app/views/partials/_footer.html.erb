<footer class="footer">
    <div class="row">
        <div class="six columns">
            <p style="float: left;">Built on rails. made with
                <i class="fa fa-heart-o" aria-hidden="true" style="color: red;"></i>
                by
                <a href="https://twitter.com/grahamplata">@grahamplata</a>
            </div>
            <div class="six columns">
                <% TwitterApi.our_public_tweets.each do |tweet| %>
                <p style="float: right;">
                    <i class="fa fa-twitter" aria-hidden="true" style="color: lightblue;"></i>
                    - "
                    <%= tweet.text %>
                    "</p>
                <% end %>
            </div>
        </div>
    </footer>
