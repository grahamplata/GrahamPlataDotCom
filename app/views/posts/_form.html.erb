<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <h2><%= pluralize(@post.errors.count, "error")  %> prevented this post from saving:</h2>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

<div class="row">
  <%= f.label :title, "Write title here" %><br>
  <%= f.text_field :title %>
  </div>
<div class="row">
  <%= f.label :content, "Write post here" %><br>
  <%= f.text_area :content %>
</div>
<%= f.submit %>
  <br>
  <br>
<% end %>
